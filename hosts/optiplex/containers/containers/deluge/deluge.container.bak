[Unit]
Description=Deluge container
After=network-online.target
Wants=network-online.target

[Container]
# Image and name
Image=ghcr.io/linuxserver/deluge:latest
ContainerName=deluge
# Replace=true

# Environment
Environment=PUID=1000
Environment=PGID=1000
Environment=TZ=Etc/UTC

# Ports
PublishPort=8112:8112
PublishPort=6881:6881
PublishPort=6881:6881/udp
PublishPort=58846:58846

# Volumes (referencing separate .volume units)
Volume=deluge-config:/config
Volume=/mnt/NAS/Archive:/downloads

# [Service]
# Restart policy
# Restart=unless-stopped

[Install]
WantedBy=default.target
